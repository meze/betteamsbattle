@using BetTeamsBattle.Frontend.Areas.NotAdmin.Models.Battle
@using Resources
@model AllBattlesViewModel

<br />
@Battles.CurrentBattles <br />
@foreach (var currentBattle in Model.CurrentBattlesViewModels)
{
    <text>
        @currentBattle.Budget / @currentBattle.BetLimit% / @currentBattle.StartDate-@currentBattle.EndDate <br />
    </text>
}

@Battles.NotStartedBattles <br />
@foreach (var notStartedBattle in Model.NotStartedBattlesViewModels)
{
    <text>
        @notStartedBattle.Budget / @notStartedBattle.BetLimit% / @notStartedBattle.StartDate-@notStartedBattle.EndDate (@notStartedBattle.InDaysString) <br />
    </text>
}

@Battles.FinishedBattles <br />
@foreach (var finishedBattle in Model.FinishedBattlesViewModels)
{
    <text>
        @finishedBattle.Budget / @finishedBattle.BetLimit% / @finishedBattle.StartDate-@finishedBattle.EndDate <br />
    </text>
}