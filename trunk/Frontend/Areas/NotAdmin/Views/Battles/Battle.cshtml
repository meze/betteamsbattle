@using BetTeamsBattle.Frontend.Areas.NotAdmin.Models.Battles
@using BetTeamsBattle.Frontend.Authentication
@using Resources
@model BattleViewModel
@{
    Layout = MVC.NotAdmin.Shared.Views._BattleLayout;
}
@section RightBlockStart {
<div class="pravo_blok_battle"> <div class="pravo_blok2_battle"> <div class="pravo_content_battle">
}
@section RightBlockFinish { </div></div></div>
}
@section head_s{
    @Html.Raw("class=\"hed_s\"")
}
@if (Model.BattleIsActive)
{ 
 <div class="knopka_st_blok">
        <div class="statistics">Statistics</div>
        <a href="@Url.Action(MVC.NotAdmin.BattleBets.MakeBet(Model.BattleId))">
            <div class="knopka_st">
                <div class="knopka_st_text">
                    <a href="@Url.Action(MVC.NotAdmin.BattleBets.MakeBet(Model.BattleId))">
                        @BattleBets.MakeBet </a>
                </div>
            </div>
        </a>
    </div>
}
@if (CurrentUser.NullableUserId.HasValue)
{
    @Html.Action(MVC.NotAdmin.BattleBets.MyBattleBets(Model.BattleId))
}