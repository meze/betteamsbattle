@using BetTeamsBattle.Frontend.Areas.NotAdmin.Models.Battles
@using Resources
@model BattleViewModel
<div class="statistics">
    <div class="my_s">
        @Battles.MyBattleStatistics
    </div>
    <span class="statistiks_line">@Battles.Balance <span class="rezulnat_st">@Model.Balance</span>
    </span>
    <span class="statistiks_line">@Battles.Gain
        <span class="rezulnat_st">@ColoredNumber.Span(Model.Earned) @ColoredNumber.Span(Model.EarnedPercents, "%")</span>
    </span>
    <span class="statistiks_line">@Battles.TotalBets <span class="rezulnat_st">@Model.TotalBetsCount</span>
    </span>
    <span class="statistiks_line">@Battles.OpenedBets
        <span class="rezulnat_st">@Model.OpenBetsCount</span>
    </span>
</div>
