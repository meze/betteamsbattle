@using BetTeamsBattle.Frontend.Areas.NotAdmin.Models.BattleBets
@using Resources
@model IEnumerable<MyBetViewModel>
<div class="my_s">
    @BattleBets.MyBets
</div>
@if (Model.Count() == 0)
{
    <text>
    @BattleBets.YouHaveMadeNoBetsInThisBattle
    </text>
}
else
{
    <div class="pravo_content2_battle">
        <div class="pravo_content2_hed">
            <table style="width: 765px; text-align: center;" border="0" cellpadding="0" cellspacing="0">
                <tbody>
                    <tr style="height: 39px; text-align: center;">
                        <td style="color: #FFF; min-width: 170px;">
                            @BattleBets.Title
                        </td>
                        <td style="color: #FFF; min-width: 80px;">
                            @BattleBets.Bet
                        </td>
                        <td style="color: #FFF; min-width: 80px;">
                            @BattleBets.Coefficient
                        </td>
                        <td style="color: #FFF; min-width: 145px;">
                            @BattleBets.BetStarted
                        </td>
                        <td style="color: #FFF; min-width: 145px;">
                            @BattleBets.BetFinished
                        </td>
                        <td style="color: #FFF; min-width: 115px;">
                            @BattleBets.Outcome
                        </td>
                    </tr>
                    @foreach (var myBet in Model)
                    {
                        <tr class="stroka">
                            <td style="">
                                <span class="stroka_t">
                                    @myBet.Title <a href="@myBet.Url">
                                        <img class="bookmaker" src="../../../../Content/images/icon.png" /></a>
                                </span>
                            </td>
                            <td>
                                <span class="td1_3">
                                    @myBet.Bet$ </span>
                            </td>
                            <td>
                                <span class="td1_4">@myBet.Coefficient</span>
                            </td>
                            <td>
                                @Html.Partial(MVC.NotAdmin.BattleBets.Views._DateAndScreenshot, myBet.OpenDateAndScreenshot)
                            </td>
                            <td class="td1_5">
                                @Html.Partial(MVC.NotAdmin.BattleBets.Views._DateAndScreenshot, new ViewDataDictionary(myBet.CloseDateAndScreenshot))
                            </td>
                            <td class="td1_8">
                                @Html.Partial(MVC.NotAdmin.BattleBets.Views._Status, myBet)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}