@using BetTeamsBattle.Frontend.Areas.NotAdmin.Models.BattleBets
@using Resources
@model MakeBetViewModel
@{
    Layout = MVC.NotAdmin.Shared.Views._BattleLayout;
}
@section RightBlockStart {
<div class="pravo_blok_battle_n">
}
@section RightBlockFinish { 
</div>
}
@section head_s{
    @Html.Raw("class=\"hed_s_n\"")
}
@using (Html.BeginForm(MVC.NotAdmin.BattleBets.MakeBet(Model.BattleId), FormMethod.Post, new { @class = "form" }))
{
    @Html.ValidationSummary(true, Common.ValidationSummaryCaption)
    
    @Forms.HideableDropDownList(Html, m => m.MakeBetForm.TeamId, BattleBets.MakeBetOnBehalfOf, Model.Teams)
    @Forms.TextBox(Html, m => m.MakeBetForm.Title, BattleBets.Title, BattleBets.TitleHelpMessage)
    @Forms.TextBox(Html, m => m.MakeBetForm.Url, BattleBets.BookmakerUrl, BattleBets.UrlHelpMessage)
    @Forms.TextBox(Html, m => m.MakeBetForm.AmountString, BattleBets.Amount + ", $", BattleBets.AmountHelpMessage)
    @Forms.TextBox(Html, m => m.MakeBetForm.CoefficientString, BattleBets.Coefficient, BattleBets.CoefficientHelpMessage)
    @Forms.CheckBox(Html, m => m.MakeBetForm.IsPrivate, BattleBets.PrivateBet, BattleBets.IsPrivateHelpMessage)

    @Forms.SubmitButton(BattleBets.MakeBet)
}