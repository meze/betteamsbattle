@using BetTeamsBattle.Frontend.Areas.NotAdmin.Localization.Resources.Views.Accounts
@using BetTeamsBattle.Frontend.Areas.NotAdmin.Models.Accounts
@model SignUpViewModel
@{
    Layout = MVC.Shared.Views._ThreeColumnsLayout;
}

@section MiddleBlock {
    @Accounts.OpenIdUrlFirstTime
    @Html.ValidationSummary(true)
    @using (Html.BeginForm(MVC.NotAdmin.Accounts.SignUp(), FormMethod.Post))
    {
        <text>
        @Accounts.Login @Html.TextBoxFor(m => m.Login, Model.Login)
        @Html.ValidationMessageFor(m => m.Login)
        <br />
        @Html.HiddenFor(m => m.OpenIdUrl, Model.OpenIdUrl)
        <br />
        <input type="submit" value="@Accounts.SignUp" />
        </text>
    }
}
