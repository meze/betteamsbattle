@using BetTeamsBattle.Frontend.Localization.Infrastructure.Url
@using BetTeamsBattle.Frontend.Models.Shared.Languages
@model LanguageViewModel
<td>
    @if (!Model.IsCurrentLanguage)
    {
        @: <a href="@UrlCountryCodeHelper.ChangeUrlCountryCodePart(Request.Url, Model.Language)">
    }
    <div class="@Model.LanguageClass"> 
    @if (Model.IsCurrentLanguage) 
    { 
        <div class="@Model.CurrentLanguageClass"></div> 
    } 
    </div> 
    @if (!Model.IsCurrentLanguage)
    {
        @: </a>     
    }
</td>
