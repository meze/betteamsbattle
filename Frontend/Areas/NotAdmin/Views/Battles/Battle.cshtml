@using BetTeamsBattle.Frontend.Areas.NotAdmin.Models.Battles
@using BetTeamsBattle.Frontend.Authentication
@using Resources
@model BattleViewModel
@{
    Layout = MVC.Shared.Views.TwoColumns._TwoColumnsLayout;
}
@section LeftBlock {
    @Html.Action(MVC.NotAdmin.Battles.BattleTopTeams(Model.BattleId))
}
@section RightBlock {
    <div class="hed_s">
        <div class="hed_s_text">
            @Battles.Battle @Model.StartDate - @Model.EndDate @Model.Budget @Model.BetLimit
        </div>
    </div>
    @if (Model.BattleIsActive)
    {
        <div class="knopka_st_blok">
            <a href="@Url.Action(MVC.NotAdmin.BattleBets.MakeBet(Model.BattleId))">
                <div class="knopka_st">
                    <div class="knopka_st_text">
                        @BattleBets.MakeBet
                    </div>
                </div>
            </a>
        </div>
    }
    @if (CurrentUser.NullableUserId.HasValue)
    {
        @Html.Action(MVC.NotAdmin.BattleBets.MyBets(Model.BattleId))
    }
}
