@using BetTeamsBattle.Frontend.Areas.Admin.Models.Battles
@model CreateBattleViewModel
@{
    Layout = MVC.Shared.Views.OneColumn._OneColumnLayout;
}
@section Title {
    Create battle
}
@using (@Html.BeginForm(MVC.Admin.AdminBattles.CreateBattle(), FormMethod.Post))
{ 
    @Html.ValidationSummary(true)

    @Forms.TextBox(Html, m => m.CreateBattleForm.StartDate, "Start date")
    @Forms.TextBox(Html, m => m.CreateBattleForm.EndDate, "End date") 
    @Forms.DropDownList(Html, m => m.CreateBattleForm.BattleType, "Battle type", Model.BattleTypes)
    @Forms.TextBox(Html, m => m.CreateBattleForm.Budget, "Budget")
    
    <input type="submit" name="Create" />
}
